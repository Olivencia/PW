block product
  section#product.screen-center
    aside.vertical-banner.box Publicidad
    section#content
      section#article-section.box(style='margin-left: 3%')
        img(src='http://lorempixel.com/150/130/')
        .adjust-to-center-left
          .center-data-disc Sección ROCK
      #left-content
        section
          article#product-name.box(style='margin-left: 4%') Marshal Mathers LP II
          article#product-data.box.discs(style='margin-left: 4%')
              h2 Autor
              #song-info
                img.square(src='http://lorempixel.com/600/600/')
                div(style='clear:both')
