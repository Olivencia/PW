      & > div
        width 100%
        text-align center
        height 30px
        & > div
          display inline-block
          & > p
            text-align center
            float left
            padding 5px
  #left-content
    width 78%

#product .category-disc .adjust-to-center-left .play-triangles,
#product .category-disc .adjust-to-center-left .center-bottom-alignment
  bottom 5px

#category #right-content,
#subs #right-content,
