    line-height 40px

#genre-discs
  width 98.5%
  height 181px
  background-color #aaa
  margin-top 54px
  border 1px solid black

#cart-content
  background url('/images/cart.png') no-repeat center
  width 5%

footer
  margin-top 130px
  width 100%
  height 80px
  background-color #222
  text-align center
  padding 20px
  #info
    li
      display inline-block
      a
        text-decoration none
        color #fff
        font-weight bold
  #copyright
    h5
      color #fff
      font-weight bold

#category
  #featured-category-disc
    width 97%
