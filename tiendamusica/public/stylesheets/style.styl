html
  background-color #aaa

.screen-center
  max-width 1336px
  font-family arial
  margin 0 auto

body
  margin 0 auto

h2
  padding-top 10px

h2,
h3,
h4
  color #0066c0

.box
  box-shadow 0 -1px 0 #e5e5e5, 0 4px 2px rgba(0,0,0,0.12), 0 2px 4px rgba(0,0,0,0.24) !important
  background-color #ddd

#home-link
  text-decoration none

.home-bar
  width 50%
  float left
  margin-bottom 2%
  & > h1
    font-family 'Lobster'
    font-size 80px
    color #0066c0
    margin 0

#login-data
  float left
  margin-left 5%
  margin-top 0.5%

.vertical-banner
  width 10%
  height 1000px
  float right
  margin-top 362px

#releases
  width auto
  height 430px
  clear left
  padding-top 100px

.release
  text-align center
  float left
  width 30%
  height 200px
  position relative
  margin-right 1%
  margin-top 1%
  margin-left 1.8%

.center-bottom-alignment
  position absolute
  bottom 12px
  left 0
  right 0

.centering-text
  text-align center
  display block

.adjust-to-left
  float left
  margin-top 1%

.play-triangles
  width 0
  height 0
  border-top 13px solid transparent
  border-left 26px solid #00f
  border-bottom 13px solid transparent
  bottom 12px
  position absolute
  right 0

#content
  width 100%
  height 1000px
  position relative

#home
  #content
    height 760px
  #article-section
    &.box
      height 642px
      padding 20px
      margin-top 40px
  .bx-wrapper
    -webkit-box-shadow 0 0 0
    box-shadow 0 0 0
    border 0
    background-color #aaa
  .vertical-banner
    margin-top 40px !important

aside
  display none
  &.vertical-banner
    background-image url("http://lorempixel.com/144/1000/")

#left-content
  float left
  width 75%
  height 850px

.bar-head
  height 30px

.section
  float left
  width 45%
  margin-top 2%
  margin-left 3%
  height 250px
  &.centering-text
    &.bordering-black
      & > h2
        margin-top 0

#featured
  clear left

#lasts-discs
  height 287px
  margin-top 45px

.genre
  float left
  width 173px
  font-size 30px
  color #234893
  border-top 1px solid black
  border-right 1px solid black
  &:first-child
    border-left 1px solid black
    background-color #aaa

#cat-alone:hover,
.genre:hover
  background-color #aaa

#cat-alone:active,
.genre:active
  background-color #222

#cat-alone
  border-bottom 1px solid black
  width 265px
  margin-left 8px
  color #234893

.discs
  float left
  width 265px
  height 120px
  margin-top 3%

.lasts-discs-form
  margin-top 4%
  margin-left 2%

.center-data-disc
  width auto
  margin-top 10%
  font-size 14px
  color #0066c0
  text-align center

.square
  width 92px
  float left
  padding-top 5%
  padding-left 5%

.adjust-to-center-left
  width 54%
  float left
  position relative
  margin-top 3.5%
  margin-left 4%
  height 100%

#right-content
  float right
  width 24%
  height 770px
  margin-top 40px

ul
  list-style-type none

li
  text-align left
  margin-bottom 10px

.references
  text-align left
  text-decoration none

#featured-disc
  margin-left 67px

nav
  list-style-type none
  padding 0
  overflow hidden
  max-width 1336px
  margin 0 auto

.submenu-nav-bar
  float left
  width 110px
  height 73px
  border-left 1px solid #222
  &:first-child
    border-right none
  a
    display block
    color #fff
    text-decoration none
    text-align center
    vertical-align center
    line-height 73px
    &:hover
      background-color #111

#nav-bar-info
  float left
  height 73px

#logo
  font-size 40px
  width 225px !important

#search-box
  width 25%

#search-box-form
  line-height 73px
  text-align center
  & > span
    position absolute
    padding-left 15px

#search-box-input
  width 250px
  height 40px
  background #2b303b
  border none
  color #63717f
  padding-left 45px
  -webkit-border-radius 5px
  -moz-border-radius 5px
  border-radius 5px

#cart
  &.submenu-nav-bar
    width 80px
    a
      padding-top 6px

header
  position fixed
  top 0
  width 100%
  z-index 99999
  background-color #333 !important

.dropdown-container
  display none
  position absolute
  background-color #333
  width 10%

.dropdown-box
  margin 0
  padding 0

.dropdown-element
  margin 0
  border-top 1px solid black
  height 40px
